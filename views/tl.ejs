<% include ./partials/header.ejs %>

<div class="container d-flex justify-content-center" style="width: 100%">
	<nav class="navbar navbar-light bg-light">
		<div class="container-fluid">
			<a href="/profile">
				<button type="button" class="btn btn-primary">Profile</button>
			</a>
		</div>
	</nav>
</div>

<div class="container py-3 px-3 my-3" style="border: none; border-radius: 13px; box-shadow: 7px 7px 15px #dadada;">
	<% allPosts.forEach(function(val){ %>
	<div class="card mb-3">
		<div class="card-body">
			<h5 class="card-title"><%= val.title %></h5>
			<h6 class="card-subtitle mb-2 text-muted">
				Created by: <%= val.userid.fname %>
			</h6>
			<p class="card-text"><%= val.desc %></p>
			<a href="/like/<%= val._id %>">
				<button type="submit" class="btn btn-primary">
					<%= val.likes.length %> Likes
				</button>
			</a>
			<h6 class="mt-3">Comments :</h6>
			
		</div>
	</div>
	<% }) %>
</div>

<% include ./partials/footer.ejs %>